<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/toFruits"
        android:layout_width="254dp"
        android:layout_height="43dp"
        android:layout_marginStart="76dp"
        android:layout_marginTop="408dp"
        android:onClick="toListActivity"
        android:text="Shop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/toRecucle"
        android:layout_width="252dp"
        android:layout_height="45dp"
        android:layout_marginStart="76dp"
        android:layout_marginTop="20dp"
        android:onClick="toListRecycler"
        android:text="RecyclerView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toFruits" />

    <Button
        android:id="@+id/toScroll"
        android:layout_width="252dp"
        android:layout_height="45dp"
        android:layout_marginStart="76dp"
        android:layout_marginTop="20dp"
        android:onClick="toListScroll"
        android:text="Scroll"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toRecucle" />

    <Button
        android:id="@+id/toSpinner"
        android:layout_width="252dp"
        android:layout_height="45dp"
        android:layout_marginStart="76dp"
        android:layout_marginTop="20dp"
        android:onClick="toListSpinner"
        android:text="Spinner"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toScroll" />

</androidx.constraintlayout.widget.ConstraintLayout>